  "dependencies": {
    "lint-staged": "^11.2.6"
  },
  "devDependencies": {
    "eslint": "^8.2.0",
    "husky": "^7.0.4",
    "prettier": "^2.4.1",
    "stylelint": "^14.0.1",
    "stylelint-config-standard": "^23.0.0"
  },
  "lint-staged": {
    "*.js": "npm run eslint:check",
    "*.css": "npm run stylelint:check",
    "*.{js,css,html,md}": "npm run format:check"
  }
